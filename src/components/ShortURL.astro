---
const { url, short, description } = Astro.props;
---

<div
  class="p-2 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-900 dark:border-gray-700"
>
  <a
    href="#"
    class="block font-medium text-blue-600 hover:underline overflow-hidden whitespace-nowrap overflow-ellipsis"
  >
    {short}
  </a>
  <a href="#">
    <h5
      class="font-semibold tracking-tight text-gray-900 dark:text-white overflow-hidden whitespace-nowrap overflow-ellipsis"
    >
      {url}
    </h5>
  </a>
  <p
    class="text-gray-500 dark:text-gray-400 overflow-hidden whitespace-nowrap overflow-ellipsis"
  >
    {description}
  </p>
</div>
